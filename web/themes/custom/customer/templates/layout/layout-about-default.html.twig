{% if content %}
<article class="about">

    <div class="layout">
        <div class="picture-header">
        {% if content.picture %}
            <div class="layout-picture">
                {{ content.picture }}
        </div>
        {% endif %}

        {% if content.header %}
            <div class="layout-header">
                {{ content.header }}
            </div>
        {% endif %}
    </div>

        <div class="layout-title">
            <h2 class="field-title-2">
                Mes savoir-faire
            </h2>
        </div>

        <div class="layout-content">
            {% if content.content %}
                <div class="layout-content-left">
                    {{ content.content }}
                </div>
            {% endif %}

            {% if content.contentsecond %}
                <div class="layout-content-right">
                    {{ content.contentsecond }}                    
                </div>
            {% endif %}
        </div>           

        {% if content.pasion %}
            <div class="layout-pasion">
            <h2 class="field-title-2">
                Mes passions
            </h2>
                {{ content.pasion }}
            </div>
        {% endif %}

    </div>
</article>

{% endif %}